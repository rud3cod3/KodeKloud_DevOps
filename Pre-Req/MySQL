## MySQL Editions

# Installation
wget https://dev.mysql.com/get/mysql-apt-config_0.8.36-1_all.deb
sudo dpkg -i mysql-apt-config_0.8.36-1_all.deb
sudo systemctl start mysql
sudo systemctl status mysql

# Logs
cat /var/log/mysql.log

# Connection
# We need mysql-client utility to connect to db
# To login
mysql -u root -p(password)

# Change default password

ALTER USER 'root'@''localhost' IDENTIFIED BY 'New_Password'
SHOW DATABASES;
CREATE DATABASE "db_name"
USE 'db_name'

# Create User
# This user will access db from only localhost
CREATE USER 'john'@'localhost' IDENTIFIED BY 'New_Password'

# This user can access db from anywhere
CREATE USER 'john'@'192.168.2.122' IDENTIFIED BY "New_Password"

# From anywhere
CREATE USER 'john'@'%' IDENTIFIED BY 'New_Password'

# Previligies
# SELECT = read
# UPDATE = write
GRANT <PERMISSION> ON <DB.TABLE> TO 'john'@'%';
